<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
    <Button
        android:id="@+id/btn00"
        android:background="@drawable/button_border"
        android:layout_width="95dp"
        android:layout_height="95dp"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="35dp"
        android:textStyle="bold"
        android:onClick="cellTick"
        android:textSize="48sp"
        android:textColor="@android:color/white"/>

    <Button
        android:id="@+id/btn01"
        android:background="@drawable/button_border"
        android:layout_width="95dp"
        android:layout_height="95dp"
        android:layout_toRightOf="@+id/btn00"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="3dp"
        android:textStyle="bold"
        android:onClick="cellTick"
        android:textSize="48sp"
        android:textColor="@android:color/white"/>

    <Button
        android:id="@+id/btn02"
        android:background="@drawable/button_border"
        android:layout_width="95dp"
        android:layout_height="95dp"
        android:layout_toRightOf="@+id/btn01"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="3dp"
        android:textStyle="bold"
        android:onClick="cellTick"
        android:textSize="48sp"
        android:textColor="@android:color/white"/>

    <Button
        android:id="@+id/btn10"
        android:background="@drawable/button_border"
        android:layout_width="95dp"
        android:layout_height="95dp"
        android:layout_below="@+id/btn00"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="35dp"
        android:textStyle="bold"
        android:onClick="cellTick"
        android:textSize="48sp"
        android:textColor="@android:color/white"/>

    <Button
        android:id="@+id/btn11"
        android:background="@drawable/button_border"
        android:layout_width="95dp"
        android:layout_height="95dp"
        android:layout_marginTop="3dp"
        android:layout_below="@+id/btn01"
        android:layout_toRightOf="@+id/btn10"
        android:layout_marginLeft="3dp"
        android:textSize="48sp"
        android:textStyle="bold"
        android:onClick="cellTick"
        android:textColor="@android:color/white"/>

    <Button
        android:id="@+id/btn12"
        android:background="@drawable/button_border"
        android:layout_width="95dp"
        android:layout_height="95dp"
        android:layout_below="@+id/btn02"
        android:layout_toRightOf="@+id/btn11"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="3dp"
        android:textStyle="bold"
        android:onClick="cellTick"
        android:textSize="48sp"
        android:textColor="@android:color/white"/>

    <Button
        android:id="@+id/btn20"
        android:background="@drawable/button_border"
        android:layout_width="95dp"
        android:layout_height="95dp"
        android:layout_below="@+id/btn10"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="35dp"
        android:textStyle="bold"
        android:textSize="48sp"
        android:onClick="cellTick"
        android:textColor="@android:color/white"/>

    <Button
        android:id="@+id/btn21"
        android:background="@drawable/button_border"
        android:layout_width="95dp"
        android:layout_height="95dp"
        android:layout_below="@+id/btn11"
        android:layout_toRightOf="@+id/btn20"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="3dp"
        android:textStyle="bold"
        android:onClick="cellTick"
        android:textSize="48sp"
        android:textColor="@android:color/white"/>

    <Button
        android:id="@+id/btn22"
        android:background="@drawable/button_border"
        android:layout_width="95dp"
        android:layout_height="95dp"
        android:layout_below="@+id/btn12"
        android:layout_toRightOf="@id/btn21"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="3dp"
        android:textStyle="bold"
        android:onClick="cellTick"
        android:textSize="48sp"
        android:textColor="@android:color/white"/>
    
    <TextView
        android:id="@+id/nameOfPlayer1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:text="Player 1"
        android:textSize="20sp"
        android:layout_marginTop="390dp"
        android:layout_marginLeft="20dp"/>

    <TextView
        android:id="@+id/nameOfPlayer2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:text="Player 2"
        android:textSize="20sp"
        android:layout_marginTop="460dp"
        android:layout_marginLeft="20dp"/>

    <TextView
        android:id="@+id/pointOfPlayer1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="@android:color/black"
        android:layout_marginTop="390dp"
        android:layout_marginLeft="135dp"
        android:text=": 0"/>

    <TextView
        android:id="@+id/player1Symbol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(X)"
        android:textSize="20sp"
        android:textColor="@android:color/black"
        android:layout_marginTop="390dp"
        android:layout_toRightOf="@id/pointOfPlayer1"
        android:layout_marginLeft="40dp"/>

    <TextView
        android:id="@+id/pointOfPlayer2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="@android:color/black"
        android:layout_marginTop="460dp"
        android:layout_marginLeft="135dp"
        android:text=": 0"/>

    <TextView
        android:id="@+id/player2Symbol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(O)"
        android:textSize="20sp"
        android:textColor="@android:color/black"
        android:layout_marginTop="460dp"
        android:layout_toRightOf="@id/pointOfPlayer2"
        android:layout_marginLeft="40dp"/>

    <Button
        android:id="@+id/playAgainBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Play Again"
        android:onClick="cellTick"
        android:layout_marginTop="410dp"
        android:layout_marginLeft="250dp"/>

</RelativeLayout>